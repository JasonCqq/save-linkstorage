{
  "name": "Save to Linkstorage",
  "description": "Runs a script to save tabs into Linkstorage when the user clicks the action toolbar icon",
  "version": "1.0",
  "version_name": "dev",
  "manifest_version": 3,
  "icons": {},
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon-1.png",
      "32": "favicon-2.png",
      "48": "favicon-3.png"
    }
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "http://localhost:4200/*",
      "https://linkstorage.net/*"
    ]
  },
  "background": {
    "service_worker": "service-worker.js"
  }
}
